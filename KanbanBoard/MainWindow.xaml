<Window x:Class="KanbanBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KanbanBoard"
        mc:Ignorable="d"
        Title="Main Window" Height="450" Width="550">

    <StackPanel>

        <Label Content="Kanban Board"/>

        <Button
            Name="createNewBoardButton"
            Content="Create Kanban Board"
            Click="createNewBoardButton_Click"/>

        <Button
            Name="loadExistingKanbanBoard"
            Content="Load Kanban Board"
            Click="loadExistingKanbanBoard_Click"/>

        <Button
            Name="applictionInfoButton"
            Content="About Application"
            Click="applictionInfoButton_Click"/>

    </StackPanel>
</Window>
